<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfanse.feedindia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FeedIndiaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.donordetails.DonorDetailsActivity"/>
        <activity android:name=".ui.mobileauth.CodeVerificationActivity" />
        <activity android:name=".ui.mobileauth.MobileVerificationActivity" />
        <activity android:name=".ui.usertypes.UserTypesActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>